<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Suppress checks for generated code -->
    <suppress checks=".*" files=".*[\\/]build[\\/].*"/>
    <suppress checks=".*" files=".*[\\/]generated[\\/].*"/>
    
    <!-- Suppress star imports for test files -->
    <suppress checks="AvoidStarImport" files=".*Test\.java"/>
    
    <!-- Suppress line length for long URLs or constants -->
    <suppress checks="LineLength" files=".*" lines="1-999" message=".*http.*"/>
    
    <!-- Suppress magic numbers in test files -->
    <suppress checks="MagicNumber" files=".*Test\.java"/>
    
    <!-- Suppress unused imports that might be used by annotations -->
    <suppress checks="UnusedImports" files=".*" message=".*jakarta\.inject\..*"/>
    <suppress checks="UnusedImports" files=".*" message=".*io\.micronaut\..*"/>
</suppressions>
